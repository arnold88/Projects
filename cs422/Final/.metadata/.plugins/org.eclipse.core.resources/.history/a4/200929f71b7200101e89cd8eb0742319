public class squirrel extends Activity implements OnClickListener{
    /** Called when the activity is first created. */
    
	String email ="";
	Date day = new Date();
	String ampm = "";
	int fox = 0;
	int gray = 0;
	int zip = 0;
	int page;
	String city = "";
	String state = "";
	String nuts = "", fruit = "", tiny = "", conif ="", seed ="", otherTrees="";
